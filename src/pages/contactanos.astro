---
import NavBar from '../components/NavBar.astro';
import  '../styles/contactanos.css';
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <script src="/src/scripts/contact.js"></script>
    <title>Contactanos</title>
</head>
<body>
  <NavBar/>
  <section class="form-container">
    <form class="contacts-content" onsubmit="enviarPorWhatsApp(event)">
      <div class="content">
        <i class="fa-solid fa-user"></i>
        <input type="text" name="nombre" placeholder="Nombres y Apellidos" required>
      </div>

      <div class="content">
        <i class="fa-solid fa-phone"></i>
        <input type="number" name="number" placeholder="Teléfono" required>
      </div>

      <div class="content">
        <i class="fa-solid fa-envelope"></i>
        <input type="email" name="email" placeholder="Correo electrónico" required>
      </div>

      <div class="content">
        <i class="fa-solid fa-message"></i>
        <textarea name="comentario" rows="3" cols="40" placeholder="Escribe tu mensaje aquí" required></textarea>
      </div>

      <button type="submit">Enviar por WhatsApp</button>
    </form>
  </section>

  
</body>
</html>